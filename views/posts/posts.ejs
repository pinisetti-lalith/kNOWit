<%- include ("../partials/header") %>
  


<div class="container">

     <header class="jumbotron">
		 <div class="container">
			<h1>
				<span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>kNOWit!
			</h1>
		 <h3>
			<i>KNOWLEDGE HAS A BEGINNING BUT NO END</i> 
		</h3>
		 <p>
			 <a class="btn btn-primary btn-md"                             
				href="/posts/new">Add new Post  <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></a>
  
		 </p>
	</div>
			</header>

      
	
	  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% posts.forEach(function(post){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= post.img %>">
                   <div class="caption">
                       <h4><%= post.name %></h4>
                   </div>
                   <p>
                       <a href="/posts/<%= post._id %>" class="btn btn-primary">Read more...</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
			
	
