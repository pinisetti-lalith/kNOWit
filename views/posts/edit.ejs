<%- include ("../partials/header") %>
<div class="container">
<div class="row" >
	<h1 class="text-center">
	Edit <%= post.name %>
</h1>
	
	<div style="width:30% ; margin: 70px auto">
	<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" value="<%= post.name %>" name="post[name]">
		</div>
		<div class="form-group">
			<input class="form-control" type ="text" value="<%= post.img %>" name = "post[img]">
		</div>
		
		<div class="form-group">
			<input class="form-control" type ="text" value="<%= post.description %>" name = "post[description]">
		</div>
		
		<div class="form-group">
			<button class="btn btn-md btn-primary btn-block">
		Submit
	</button>
			
			<div style="margin-top: 10px">
	<a href="/posts">Go To Home</a>	
	</div>  
		</div>
	
	</form>
		</div>
	
		
	

</div>
</div>

